<%= form_with(model: @comment, local: true,url: choose_new_or_edit ) do |form| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= @comment.errors.count %>件の入力が足りません。</h2>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="comment_title">
    <%= form.label :studytitle %>
    <%= form.text_field :studytitle %>
  </div>
  <div class="comment_title">
    <%= form.label :内容 %>
    <%= form.text_field :content %>
  </div>
  <div class="comment_title">
    <%= form.label :時間を入力 %>
    <%= form.date_field :timecount %>
  </div>  
  <%= form.submit %>
<% end %>
<%= link_to "一覧画面", comments_path %>